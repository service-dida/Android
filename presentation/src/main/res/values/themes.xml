<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DIDA" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_lemon</item>
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brand_lignt_lemon</item>
        <item name="colorSecondaryVariant">@color/status_bar</item>
        <item name="colorOnSecondary">@color/mainblack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Actionbar</item>
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.OverFlow</item>
    </style>

    <style name="Theme.DIDA.BottomDialogAboveKeyboard" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <!--Toolbar 뒤로가기 색상 변경을 위해 추가-->
    <style name="AppTheme.Actionbar" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">#ffffff</item>
    </style>

    <!--Toolbar 메뉴 색상 변경을 위해 추가-->
    <style name="AppTheme.OverFlow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">#ffffff</item>
    </style>

    <!--Spinner 테마 변경을 위해 추가-->
    <style name="SpinnerTheme" parent="Theme.DIDA">
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
        <item name="android:dropDownListViewStyle">@style/Spinner.DivideStyle</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:checkMark">@null</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="Spinner.DivideStyle" parent="android:style/Widget.ListView.DropDown">
        <item name="android:divider">@color/spinner_devide_line</item> <!-- divider 색 -->
        <item name="android:dividerHeight">1dp</item> <!-- divider 높이 -->
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">18dp</item>
    </style>

    <style name="Theme.DIDA.RemoveSplash" parent="Theme.DIDA">
        <item name="android:windowIsTranslucent">true</item>
    </style>


</resources>