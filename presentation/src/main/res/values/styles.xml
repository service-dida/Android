<resources>
    <style name="tab_text" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
    </style>

    <!-- ToolBar -->
    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="actionMenuTextColor">@color/white</item>
    </style>

    <!--Bottom Navigation Text -->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">12dp</item>
    </style>

    <!-- TextView 스타일 -->
    <style name="Password_dial_style" parent="@style/Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00ff0000</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:hapticFeedbackEnabled">true</item>
    </style>

    <style name="Password_image_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:layout_marginRight">11dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TextView_bold_20_white" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView_bold_24_white" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView_bold_14_white" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextView_regular_14_white" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextView_regular_16_white" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Button_surface3_regular_16_white" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_surface3_radius10</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Button_lemon_regular_16_black" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">18dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/custom_brandlemon_radius16</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!--EditText 스타일 -->
    <style name="Widget.AppCompat.EditText.DetailCommunity.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">left</item>
        <item name="android:hint">@string/detail_community_edit_hint</item>
        <item name="android:textColorHint">@color/surface6</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@@font/pretendard_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditText_surface2_radius10_solid_surface5" parent="Widget.AppCompat.EditText">
        <item name="android:gravity">left|center</item>
        <item name="android:hint">@string/detail_community_edit_hint</item>
        <item name="android:textColorHint">@color/surface6</item>
        <item name="android:textSize">14dp</item>
        <item name="fontFamily">@@font/pretendard_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_surface2_radius10_surface5_width1</item>
        <item name="android:padding">17dp</item>
    </style>

</resources>
