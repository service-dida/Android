<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="code"
            type="com.dida.common.ui.report.ReportCode" />

        <variable
            name="isChecked"
            type="Boolean" />

        <variable
            name="eventListener"
            type="com.dida.common.ui.report.ReportActions" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/report_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/report_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:button="@drawable/selector_ic_radio"
            android:checked="@{isChecked}"
            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/report_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{code.title}"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/report_radio_button"
            app:layout_constraintTop_toTopOf="@id/report_radio_button"
            app:layout_constraintBottom_toBottomOf="@id/report_radio_button"/>

        <com.dida.common.customview.CustomEditText
            android:id="@+id/report_contents"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            style="@style/EditText_surface2_radius10_solid_surface5"
            android:gravity="top"
            android:hint="@string/report_hint"
            android:inputType="textMultiLine"
            android:maxLength="300"
            android:maxLines="3"
            app:reportContentVisible="@{code}"
            android:text="@={code.message}"
            app:layout_constraintTop_toBottomOf="@id/report_title"
            android:layout_marginTop="20dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
