<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="holderModel"
            type="com.dida.domain.model.main.UserNft" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/surface2"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/surface2">

            <ImageView
                android:id="@+id/nft_ImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/surface2"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:image_from_url="@{holderModel.imgUrl}"
                app:layout_constraintDimensionRatio="1/1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/user_name_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_surface5_radius10"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nft_ImageView" />

            <TextView
                android:id="@+id/nft_name_textview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintWidth_percent="0.6"
                android:background="@drawable/custom_surface5_radius10"
                app:layout_constraintStart_toStartOf="@+id/user_name_textview"
                app:layout_constraintTop_toBottomOf="@+id/user_name_textview" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/custom_surface5_radius10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/user_name_textview"
                app:layout_constraintTop_toBottomOf="@+id/nft_name_textview"
                app:layout_constraintWidth_percent="0.3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>
