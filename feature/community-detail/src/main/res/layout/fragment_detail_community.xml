<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="vm"
            type="com.dida.community_detail.DetailCommunityViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainblack">

        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/TextView_bold_20_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/detail_community_title" />
        </Toolbar>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/detail_community_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/edit_main"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/community_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/surface1"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/user_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toStartOf="@id/more_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:onSingleClick="@{() -> vm.onUserProfileClicked(vm.postState.memberInfo.memberId)}">

                        <ImageView
                            android:id="@+id/user_img"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            app:image_from_url_circle="@{vm.postState.memberInfo.profileImgUrl}"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></ImageView>

                        <TextView
                            android:id="@+id/user_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="@{vm.postState.memberInfo.memberName}"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            app:layout_constraintBottom_toBottomOf="@id/user_img"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/user_img"
                            app:layout_constraintTop_toTopOf="@id/user_img"></TextView>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/more_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        app:layout_constraintBottom_toBottomOf="@id/user_layout"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="@id/user_layout"
                        app:onSingleClick="@{() -> vm.onCommunityMoreClicked(vm.postState.memberInfo.memberId, vm.postState.postInfo.postId)}">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_more_white"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/contents_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:text="@{vm.postState.postInfo.title}"
                        android:textColor="@color/white"
                        android:textSize="16dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/user_layout"></TextView>

                    <TextView
                        android:id="@+id/contents_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineSpacingMultiplier="1.3"
                        android:text="@{vm.postState.postInfo.content}"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/contents_name"></TextView>

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="32dp"
                        android:background="@color/line_surface1"
                        app:layout_constraintTop_toBottomOf="@id/contents_txt"></View>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@id/line1"
                        app:onSingleClick="@{() -> vm.onCardClicked(vm.postState.nftInfo.nftId)}">

                        <ImageView
                            android:id="@+id/nft_img"
                            android:layout_width="79dp"
                            android:layout_height="79dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:nft_img_rounded="@{vm.postState.nftInfo.nftImgUrl}" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/nft_contents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            app:layout_constraintBottom_toBottomOf="@id/nft_img"
                            app:layout_constraintLeft_toRightOf="@id/nft_img"
                            app:layout_constraintTop_toTopOf="@id/nft_img">

                            <TextView
                                android:id="@+id/nft_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_regular"
                                android:text="@{vm.postState.nftInfo.nftName}"
                                android:textColor="@color/white"
                                android:textSize="14dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/dida_img"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_marginTop="8dp"
                                android:background="@drawable/custom_brandlemon_fill_radius100"
                                android:src="@mipmap/img_dida_logo_foreground"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/nft_name" />

                            <TextView
                                android:id="@+id/dida_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:fontFamily="@font/pretendard_semibold"
                                android:text="@{vm.postState.nftInfo.price}"
                                android:textColor="@color/hots_coin_txt"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="@id/dida_img"
                                app:layout_constraintStart_toEndOf="@id/dida_img"
                                app:layout_constraintTop_toTopOf="@id/dida_img" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/next_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            android:src="@drawable/ic_next"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"></ImageView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detail_community_main"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:clipToPadding="false"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:padding="4dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/community_main" />

                <TextView
                    android:id="@+id/reply_empty_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:gravity="center"
                    android:lineSpacingExtra="8dp"
                    android:text="@string/detail_community_reply_empty_text"
                    android:textColor="@color/white_50"
                    android:textSize="20dp"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/community_main" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/edit_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/surface6"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp">

                <EditText
                    android:id="@+id/edit_comments"
                    style="@style/Widget.AppCompat.EditText.DetailCommunity.EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:text="@={vm.commentState}"
                    app:commentBackground="@{vm.commentState}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/send_btn"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/send_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:icSendAble="@{vm.commentState}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:onSingleClick="@{() -> vm.onCommentClicked(vm.postState.postInfo.postId)}"
                    tools:src="@drawable/ic_send_enabled" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

