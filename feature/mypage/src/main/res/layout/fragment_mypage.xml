<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.dida.domain.main.model.Sort" />

        <variable
            name="vm"
            type="com.dida.mypage.MyPageViewModel" />
    </data>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainblack"
            android:paddingBottom="10dp">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:userToolBar="@{vm.myPageState}" />

            <androidx.core.widget.NestedScrollView
                android:id="@+id/mypage_scroll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:fillViewport="true"
                android:overScrollMode="never"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/toolbar">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    app:constraint_endLoading="@{vm.myPageState}">

                    <!--TODO : 프로필 없을 시 기본 사진 추가-->
                    <ImageView
                        android:id="@+id/circleImageView"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginTop="14dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:userProfile="@{vm.myPageState}" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="19dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        app:layout_constraintEnd_toEndOf="@+id/circleImageView"
                        app:layout_constraintStart_toStartOf="@+id/circleImageView"
                        app:layout_constraintTop_toBottomOf="@+id/circleImageView"
                        app:userNickname="@{vm.myPageState}" />

                    <!--TODO : 자기소개 없을 시 기본 말 추가-->
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        app:layout_constraintEnd_toEndOf="@+id/circleImageView"
                        app:layout_constraintStart_toStartOf="@+id/circleImageView"
                        app:layout_constraintTop_toBottomOf="@+id/textView"
                        app:userDescription="@{vm.myPageState}" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                app:userNftCount="@{vm.myPageState}" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center"
                                android:text="@string/nft_text"
                                android:textColor="@color/mypage_info_gray_text"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/view_line" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            app:onSingleClick="@{() -> vm.onUserFollowedClicked()}">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                app:userFollwerCount="@{vm.myPageState}" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center"
                                android:text="@string/follower_text"
                                android:textColor="@color/mypage_info_gray_text"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/view_line" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical"
                            app:onSingleClick="@{() -> vm.onUserFollowingClicked()}">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center"
                                android:textColor="@color/white"
                                android:textSize="16dp"
                                app:userFollwingCount="@{vm.myPageState}" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center"
                                android:text="@string/following_text"
                                android:textColor="@color/mypage_info_gray_text"
                                android:textSize="13dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="46dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center"
                                android:text="@string/mypage_nft_type_newest_text"
                                android:textColor="@{vm.cardSortTypeState == Sort.NEWEST? @color/brand_lemon : @color/surface6}"
                                android:textSize="14dp"
                                app:onSingleClick="@{() -> vm.onMypageNftTypeClicked(Sort.NEWEST)}" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                app:srcCompat="@drawable/ic_wallet_dot" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/pretendard_regular"
                                android:gravity="center"
                                android:text="@string/mypage_nft_type_oldest_text"
                                android:textColor="@{vm.cardSortTypeState == Sort.OLDEST? @color/brand_lemon : @color/surface6}"
                                android:textSize="14dp"
                                app:onSingleClick="@{() -> vm.onMypageNftTypeClicked(Sort.OLDEST)}" />

                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_userNft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                        tools:itemCount="2"
                        tools:listitem="@layout/holder_mypage_user_cards" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/empty_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="100dp"
                        android:visibility="gone"
                        app:layout_constraintTop_toBottomOf="@id/constraintLayout">

                        <TextView
                            android:id="@+id/empty_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="@string/empty_text_message"
                            android:textColor="@color/white_50"
                            android:textSize="20dp"
                            app:layout_constraintBottom_toTopOf="@id/empty_description"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/empty_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:text="@string/empty_text_description"
                            android:textColor="@color/surface6"
                            android:textSize="16dp"
                            app:layout_constraintBottom_toTopOf="@id/empty_create_button"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                        <TextView
                            android:id="@+id/empty_create_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/custom_brandlemon_radius10"
                            android:fontFamily="@font/pretendard_bold"
                            android:paddingStart="24dp"
                            android:paddingTop="14dp"
                            android:paddingEnd="24dp"
                            android:paddingBottom="14dp"
                            android:text="@string/empty_create_button_text"
                            android:textColor="@color/mainblack"
                            android:textSize="18dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:onSingleClick="@{() -> vm.onCreateButtonClicked()}" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/user_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:startLoading="@{vm.myPageState}"
                tools:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <include layout="@layout/skeleton_user_profile" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <include
                                layout="@layout/skeleton_holder_mypage_user_cards"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7dp"
                                android:layout_weight="1" />

                            <include
                                layout="@layout/skeleton_holder_mypage_user_cards"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7dp"
                                android:layout_weight="1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <include
                                layout="@layout/skeleton_holder_mypage_user_cards"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7dp"
                                android:layout_weight="1" />

                            <include
                                layout="@layout/skeleton_holder_mypage_user_cards"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="7dp"
                                android:layout_weight="1" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>

